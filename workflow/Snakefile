# Main entrypoint of the workflow.


# load configuration
# -----------------------------------------------------
configfile: "config/config.yaml"


# load rules
# -----------------------------------------------------
include: "./rules/prep_dds.smk"
include: "./rules/DESeq_run.smk"


# optional messages, log and error handling
# -----------------------------------------------------
onstart:
    print("\n--- Analysis started ---\n")


onsuccess:
    print("\n--- Workflow finished! ---\n")


onerror:
    print("\n--- An error occurred :( ---\n")


# target rules
# -----------------------------------------------------
rule all:
  input:
    dds=f"{config['projdir']}/{config['resultsdir']}/dds.rds",
    res_workable=f"{config['projdir']}/{config['resultsdir']}/deds.rds"
  default_target: True
